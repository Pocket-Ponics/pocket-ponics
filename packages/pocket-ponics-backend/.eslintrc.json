{   
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures" : {
            "jsx": true, 
            "modules": true 
        }
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}